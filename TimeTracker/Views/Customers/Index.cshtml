@model IEnumerable<TimeTracker.Models.Customer>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h1>Customers</h1>
    </div>
    <div class="col-md-auto">
        <a class="btn btn-primary" asp-area="" asp-controller="Customers" asp-action="Create">
            Add
        </a>
    </div>
    <!--<div class="col col-lg-2">
        3 of 3
    </div>-->
</div>

<ul class="list-group">

    @foreach (var customer in Model)
    {
        <li class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">@customer.CompanyName</h5>
                <a class="btn btn-light" asp-area="" asp-controller="Customers" asp-action="Update" asp-route-id="@customer.Id">
                    Edit
                </a>
            </div>
            <p class="mb-1">@customer.Name</p>
            <small>@customer.Address</small>
        </li>
    }
</ul>
